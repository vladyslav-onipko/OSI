{% set linkClasses = ['fab fa-linkedin-in', 'fab fa-instagram', 'fab fa-twitter', 'fab fa-facebook-f'] %}

{% macro logoContainer(text) %}
  <div class="logo">
    <p>{{text}}</p><span>.</span>
  </div>
{% endmacro %}

{% macro links() %}
  <div class="nav-bar__links">
    {% for class in linkClasses %}
      <a href="#"><i class="{{class}}"></i></a>
    {% endfor %}
  </div>
{% endmacro %}
  
{% macro navigationBar(navItems, logo=true) %}
  {% if logo %}
    {{ logoContainer('Roran') }}
  {% endif %}
  <ul class="nav-bar__items">
    {% for item in navItems %}
      <li class="nav-bar__item"><a href="#">{{item}}</a></li>
    {% endfor %}
  </ul>
{% endmacro %}