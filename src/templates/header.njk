{%  set  text = ['Roran.', 'PSD TEMPLATE', 'By LunarTemplates'] %}
{%  set classNames = ['title', 'subtitle', 'author'] %}

{% macro description() %}
  {% for i in range(1, text.length + 1) %}
    <h{{i}} class="header__{{classNames[i - 1]}}">{{text[i - 1]}}</h{{i}}>
  {% endfor %}
{% endmacro %}

{% macro header() %}
  <div class="wrapper">
    <div class="header__info">
      {{ description() }}
      <hr>
      <p>www.lunartemplates.com</p>
    </div>
    <div class="header__badge">
      <p>Free to download at lunartemplates.com</p>
    </div>
    <div class="arrows-container">
      {% for _ in range(0, 3) %}
        <i class="fas fa-angle-down"></i>
      {% endfor %}
    </div>
  </div>
  {% endmacro %}